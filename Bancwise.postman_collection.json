{
  "info": {
    "name": "Bancwise API",
    "_postman_id": "bancwise-collection",
    "description": "Postman collection for testing Bancwise MF Portfolio API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Signup",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n \"name\": \"Test User\",\n \"email\": \"test@test.com\",\n \"password\": \"password123\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/signup"
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n \"email\": \"test@test.com\",\n \"password\": \"password123\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/login"
      }
    },
    {
      "name": "Portfolio - Add Fund",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n \"schemeCode\": 152075,\n \"units\": 10,\n \"purchaseDate\": \"2025-09-12\"\n}"
        },
        "url": "{{baseUrl}}/api/portfolio/add"
      }
    },
    {
      "name": "Portfolio - List",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/portfolio/list"
      }
    },
    {
      "name": "Portfolio - Value",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/portfolio/value"
      }
    },
    {
      "name": "Funds - Search",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/funds?search=bluechip&page=1&limit=20"
      }
    },
    {
      "name": "Funds - NAV History",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/funds/152075/history"
      }
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/health"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" }
  ]
}
